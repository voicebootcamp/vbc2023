<?xml version="1.0" encoding="utf-8"?>
<extension version="3.9.0" type="plugin" group="system" method="upgrade">
    <name>System - Membership Pro</name>
    <author>Tuan Pham Ngoc</author>
    <authorEmail>tuanpn@joomdonation.com</authorEmail>
    <authorUrl>https://joomdonation.com</authorUrl>
    <copyright>Copyright (C) 2012 - 2022 Ossolution Team</copyright>
    <license>GNU General Public License version 3, or later</license>
    <creationDate>July 2018</creationDate>
    <version>3.1.2</version>
    <description>This plugin is used to perform various tasks in Membership Pro (Generate Invoice Number, Generate
        Membership ID....), so please don't unpublish it. It is needed for Membership Pro to work properly
    </description>
    <files>
        <filename plugin="membershippro">membershippro.php</filename>
    </files>
    <config>
        <fields name="params">
            <fieldset name="basic" addfieldpath="/administrator/components/com_osmembership/model/fields">
                <field name="block_account_when_expired" type="radio" label="Block account when subscription expired"
                       default="0">
                    <option value="0">No</option>
                    <option value="1">Yes</option>
                </field>
            </fieldset>
        </fields>
    </config>
</extension>
