<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset name="contenttype">
         <fields name="recipe">
            <field name="headline" type="map"
                label="NR_TITLE"
                description="GSD_RECIPE_TITLE_DESC"
                hint="Chicken Soup"
                default="gsd.item.headline"
                custom_class="input-xlarge"
                required="true"
            />
            <field name="description" type="map"
                label="GSD_ITEM_DESC"
                description="GSD_ITEM_DESC_DESC"
                default="gsd.item.description"
                custom_class="input-xlarge"
                required="true"
            />
            <field name="image" type="mapimage"
                label="NR_IMAGE"
                description="GSD_IMAGE_OPTION_DESC"
                default="gsd.item.image"
                required="true"
            />
            <field name="author" type="mapuser"
                label="GSD_AUTHOR"
                description="GSD_AUTHOR_DESC"
                default="user.name"
            />
            <field name="rating_value" type="map"
                label="GSD_RATE_VALUE"
                description="GSD_RATE_VALUE_DESC"
                default="gsd.item.ratingValue">
                <subform>
                    <field name="custom" type="nr_rate"/>
                </subform>
            </field>
            <field name="review_count" type="map"
                label="GSD_REVIEW_COUNT"
                description="GSD_REVIEW_COUNT_DESC"
                default="gsd.item.reviewCount"
                hint="5"
            />
            <field name="category" type="map"
                label="GSD_CATEGORY"
                description="GSD_RECIPE_CATEGORY_DESC"
                hint="Dessert"
            />
            <field name="cuisine" type="map"
                label="GSD_RECIPE_CUISINE"
                description="GSD_RECIPE_CUISINE_DESC"
                hint="Mediterranean"
            />
            <field name="prepTime" type="map"
                label="GSD_RECIPE_PREPTIME"
                description="GSD_RECIPE_PREPTIME_DESC"
            />
            <field name="cookTime" type="map"
                label="GSD_RECIPE_COOKTIME"
                description="GSD_RECIPE_COOKTIME_DESC"
            />
            <field name="totalTime" type="map"
                label="GSD_RECIPE_TOTALTIME"
                description="GSD_RECIPE_TOTALTIME_DESC"
            />
            <field name="calories" type="map"
                label="GSD_RECIPE_CALORIES"
                description="GSD_RECIPE_CALORIES_DESC"
            />
            <field name="yield" type="map"
                label="GSD_RECIPE_YIELD"
                description="GSD_RECIPE_YIELD_DESC"
                hint="4 servings"
            />
            <field name="ingredient" type="map"
                label="GSD_RECIPE_INGREDIENT"
                description="GSD_RECIPE_INGREDIENT_DESC">
                <subform>
                    <field name="custom" type="textarea"
                        hint="GSD_RECIPE_INGREDIENT_DESC"
                        class="input-xxlarge"
                        rows="3"
                        filter="raw"
                    />
                </subform>
            </field>
            <field name="instructions" type="map"
                label="GSD_RECIPE_INSTRUCTIONS"
                description="GSD_RECIPE_INSTRUCTIONS_DESC">
                <subform>
                    <field name="custom" type="textarea"
                        hint="GSD_RECIPE_INSTRUCTIONS_DESC"
                        class="input-xxlarge"
                        rows="3"
                        filter="raw"
                    />
                </subform>
            </field>
            <field name="video" type="map"
                label="GSD_VIDEO_CONTENTURL"
                description="GSD_RECIPE_VIDEO_DESC"
                hint="https://www.example.com/chicken_soup.mp4"
                custom_class="input-xxlarge"
            />
            <field name="keywords" type="map"
                label="GSD_KEYWORDS"
                description="GSD_RECIPE_KEYWORDS_DESC"
                hint="winter apple pie, nutmeg crust"
                custom_class="input-xxlarge"
            />
            <field name="publish_up" type="mapdate"
                label="GSD_DATE_PUBLISHED"
                description="GSD_DATE_PUBLISHED_DESC"
                default="gsd.item.publish_up"
            />
            <field name="modified" type="mapdate"
                label="GSD_DATE_MODIFIED"
                description="GSD_DATE_MODIFIED_DESC"
                default="gsd.item.modified"
            />
        </fields>
    </fieldset>
</form>