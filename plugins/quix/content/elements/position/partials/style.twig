{% include 'global.twig' %}
{% set tag = field('html_tag') %}
var id = "#{{ field("id") }}";

// typography
style.typography(id, {{ field('font') | json_encode() }});

// Alignment
style.alignment(id, {{ field('alignment') | json_encode() }});

// Text Color
style.css( id, 'color', {{ field('text_color') | json_encode() }});
{% if field("enable_bg")|default(false) %}
	// text bg
	style.background (id, {{ field("text_bg") | json_encode() }})

	// text background init
	style.css (id + ',' + id + ':hover', 'background-clip', 'text')
	style.css (id + ',' + id + ':hover', '-webkit-background-clip', 'text')
	style.css (id + ',' + id + ':hover', 'color', 'transparent')
{% endif %}

{% if renderer %}
    style.load(id);
{% endif %}