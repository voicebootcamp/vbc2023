<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.1" client="site" method="upgrade">
	<name>AA User IP and Location</name>
	<author>Syed Ashik Mahmud</author>
	<creationDate>03-05-2021</creationDate>
