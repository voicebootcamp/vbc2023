<?xml version="1.0" encoding="utf-8"?>
<metadata>
    <layout title="Manage Registrants">
        <message>
            Display registrants to allow users with proper permission to manage (add/edit/delete...) registrants
        </message>
    </layout>
    <fields name="params">
        <fieldset name="basic">
            <field name="hide_buttons" type="list" multiple="true" label="Hide Buttons"
                   description="Select the buttons which you want to hide on Registrants Management screen">
                <option value="add">New</option>
                <option value="edit">Edit</option>
                <option value="delete">Delete</option>
                <option value="publish">Publish/Unpublish</option>
                <option value="cancel_registrations">Cancel Registrations</option>
                <option value="checkin_multiple_registrants">Checkin</option>
                <option value="check_out">Checkout</option>
                <option value="batch_mail">Mass Mail</option>
                <option value="resend_email">Resend Emails</option>
                <option value="export">Export Registrants</option>
                <option value="export_pdf">Export PDF</option>
                <option value="download_certificates">Download Certificates</option>
                <option value="send_certificates">Send Certificates</option>
                <option value="request_payment">Request Payment</option>
            </field>
            <field type="editor" name="intro_text" filter="raw" label="Intro Text" description="Enter the text you want to be displayed at the top of manage registrants page" />
        </fieldset>
    </fields>
</metadata>