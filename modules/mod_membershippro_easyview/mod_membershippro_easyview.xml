<extension type="module" version="3.5" client="site" method="upgrade">
	<name>Membership Pro View</name>
	<author>Tuan Pham Ngoc</author>
	<authorEmail>tuanpn@joomdonation.com</authorEmail>
	<authorUrl>https://joomdonation.com</authorUrl>
	<copyright>Copyright (C) 2012 - 2022 Ossolution Team</copyright>
	<license>GNU General Public License version 3, or later</license>
	<creationDate>Nov 2012</creationDate>
	<version>3.1.2</version>
	<description>This module is used to display any views in Membership Pro extension.</description>
	<files>
		<filename module="mod_membershippro_easyview">mod_membershippro_easyview.php</filename>
	</files>
	<config>
		<fields name="params" addfieldpath="/administrator/components/com_osmembership/elements">
			<fieldset name="basic">
				<field name="moduleclass_sfx" type="text"
							label="Module Class Suffix" description="PARAMMODULECLASSSUFFIX">
				</field>
				<field name="menu_item_id" type="mpmenuitems"
					   label="Menu Item"
					   description="Select menu item which is linked to the view you want to display"
					   default="0">
				</field>
			</fieldset>
		</fields>	
	</config>
</extension>