<?xml version="1.0" encoding="utf-8"?>
<extension version="3.9.0" type="plugin" group="eventbookingsms" method="upgrade">
    <name>Events Booking SMS - Clickatell</name>
    <author>Tuan Pham Ngoc</author>
    <creationDate>August 2020</creationDate>
    <copyright>Copyright 2010 - 2022 Ossolution Team</copyright>
    <license>https://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
    <authorEmail>tuanpn@joomdonation.com</authorEmail>
    <authorUrl>https://joomdonation.com</authorUrl>
    <version>4.3.0</version>
    <description>This plugin is used to send SMS Reminder To Events Booking Registrants.</description>
    <files>
        <filename plugin="clickatell">clickatell.php</filename>
		<folder>clickatell</folder>
    </files>
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field name="api_token" type="text" size="60" default="" label="API Token" />
                <field name="sender_id" type="text" size="60" default="" label="Sender ID" />
                <field name="prefix" type="text" size="60" default="" label="Default Prefix" description="Prefix will be added to phone number to make number become international format. For example +44 for England" />
            </fieldset>
        </fields>
    </config>            
</extension>