	<description>COM_JMEDIA_XML_DESCRIPTION</description>

	<files folder="site">
		<filename>jmedia.php</filename>
	</files>
	
	<languages folder="site">
		<language tag="en-GB">language/en-GB.com_jmedia.ini</language>
