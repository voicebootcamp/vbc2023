    	</fieldset>
		<!-- Category -->
		<fieldset name="category">
			<fields name="djeventscategory">
				<field name="assignment_state" type="assignmentselection"
	                label="NR_CATEGORIES"
	                description="PLG_GSD_DJEVENTS_ASSIGN_CATEGORY_DESC"
	            />
	            <field name="selection" type="nrdjeventscategories" 
	                label="NR_SELECTION" 
	                description="NR_CATEGORIES_DESC"
	                multiple="true" 
	            />
        	</fields>
    	</fieldset>
