			<fields name="djeventssingle">
				<field name="assignment_state" type="assignmentselection" 
					label="Event"
					description="PLG_GSD_DJEVENTS_ASSIGN_EVENT_DESC"
				/>
				<field name="selection" type="componentitems" 
					label="NR_SELECTION" 
					description="PLG_GSD_DJEVENTS_ASSIGN_EVENT_SELECTION_DESC"
					multiple="true"
					table="djev_events"
					column_state="published"
				/>
