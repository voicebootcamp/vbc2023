<?xml version="1.0" encoding="utf-8"?>
<form addfieldpath="/administrator/components/com_osmembership/model/fields">
    <field
            name="renewal_discounts"
            type="subform"
            label="OSM_EARLY_RENEWAL_DISCOUNTS"
            description="OSM_EARLY_RENEWAL_DISCOUNTS"
            layout="joomla.form.field.subform.repeatable-table"
            icon="list"
            multiple="true"
    >
        <form hidden="true" name="list_early_renewal_discounts" repeat="true">
            <field
                    name="id"
                    type="hidden"
                    value="0"
            />
            <field
                    name="number_days"
                    type="number"
                    label="OSM_DAYS_LEFT"
                    class="input-small"
            />
            <field name="discount_amount"
                   type="number"
                   label="OSM_DISCOUNT"
                   class="input-small"
                   step="0.01"
            />
            <field
                    name="discount_type"
                    type="osmdiscounttype"
                    label="OSM_DISCOUNT_TYPE"
                    class="input-small" />
        </form>
    </field>
</form>
