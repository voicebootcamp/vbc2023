<?xml version="1.0" encoding="utf-8"?>
<form>
    <field
            name="schedule_documents"
            type="subform"
            label="Schedule Documents"
            description="Schedule Documents"
            layout="joomla.form.field.subform.repeatable-table"
            icon="list"
            multiple="true"
    >
        <form hidden="true" name="list_scheduledocuments" repeat="true">
            <field
                    name="id"
                    type="hidden"
                    value="0"
            />
            <field
                    name="document"
                    type="filelist"
                    label="Document"
                    directory="media/com_osmembership/scheduledocuments"
                    exclude=".htaccess|index.html"
            />
            <field
                    name="number_days"
                    type="text"
                    label="Number Days"
                    size="10"
            />
        </form>
    </field>
</form>
