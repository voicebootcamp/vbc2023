<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="assignments">
		<fieldset name="single">
			<fields name="zoosingle">
				<field name="assignment_state" type="assignmentselection" 
					label="GSD_ITEM"
					description="PLG_GSD_ZOO_ASSIGN_ITEM_DESC"
				/>
				<field name="selection" type="componentitems" 
					label="NR_SELECTION" 
					description="PLG_GSD_ZOO_ASSIGN_ITEM_SELECTION_DESC"
					multiple="true"
					table="zoo_item"
					column_title="name"
				/>
        	</fields>
    	</fieldset>
		<fieldset name="category">
			<fields name="zoocategory">
				<field name="assignment_state" type="assignmentselection"
	                label="NR_CATEGORIES"
	                description="PLG_GSD_ZOO_ASSIGN_CATEGORY_DESC"
	            />
	            <field name="selection" type="nrzoocategories" 
	                label="NR_SELECTION" 
	                description="NR_CATEGORIES_DESC"
	                multiple="true" 
	                default=""
	            />
	            <fields name="params">
		            <field name="inc_children" type="list"
		                label="NR_ALSO_ON_CHILD_ITEMS"
		                description="NR_ALSO_ON_CHILD_ITEMS_DESC"
		             	class="input-medium"
		                default="0">
		                <option value="0">JNO</option>
		                <option value="1">JYES</option>
		                <option value="2">NR_ONLY</option>
		            </field>
	        	</fields>
        	</fields>
    	</fieldset>
	</fields>
</form>